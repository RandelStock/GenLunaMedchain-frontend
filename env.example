# Copy this file to .env.local and fill in your values

# ===========================================
# BACKEND API CONFIGURATION
# ===========================================
# Development: http://localhost:4000
# Production: https://your-render-app.onrender.com
VITE_API_BASE_URL=http://localhost:4000

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================
# Network (polygon_mumbai is cheapest for students)
VITE_BLOCKCHAIN_NETWORK=polygon_mumbai

# RPC URL (get free from Infura, Alchemy, or use public RPCs)
VITE_BLOCKCHAIN_RPC_URL=https://polygon-mumbai.infura.io/v3/demo

# Chain ID
VITE_BLOCKCHAIN_CHAIN_ID=80001

# Explorer URL
VITE_BLOCKCHAIN_EXPLORER_URL=https://mumbai.polygonscan.com

# Contract address (will be set after deployment)
VITE_CONTRACT_ADDRESS=

